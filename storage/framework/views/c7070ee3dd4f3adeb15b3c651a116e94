		$('.removeMultiFiles').on('click',function(){
			var removeUrl = '<?php echo e(url("nabavka/removefiles?file=")); ?>'+$(this).attr('url');
			$(this).parent().remove();
			$.get(removeUrl,function(response){});
			$(this).parent('div').empty();	
			return false;
		});		
		
	});
